<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/song_root"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <cc.haoduoyu.umaru.widgets.circleimageview.CircleImageView
        android:id="@+id/song_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/xiaomai" />


    <TextView
        android:id="@+id/song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/song_image"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_toEndOf="@+id/song_image"
        android:layout_toRightOf="@+id/song_image"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textSizeX3"
        tools:text="Hello" />

    <TextView
        android:id="@+id/song_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/song_title"
        android:layout_alignStart="@+id/song_title"
        android:layout_below="@+id/song_title"
        android:singleLine="true"
        android:textSize="@dimen/textSizeX3"
        tools:text="ALI" />

    <TextView
        android:id="@+id/song_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/textSizeX3"
        tools:text="04:52" />


</RelativeLayout>