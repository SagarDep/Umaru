<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <cc.haoduoyu.umaru.widgets.CircleImageView
        android:id="@+id/user_avatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/avatar_margin"
        android:src="@drawable/avatar_weibo" />

    <TextView
        android:id="@+id/item_chat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_avatar"
        android:layout_toLeftOf="@+id/user_avatar"
        android:textSize="@dimen/textSizeX3"
        tools:text="test" />


</RelativeLayout>