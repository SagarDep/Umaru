<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cc.haoduoyu.umaru">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Umaru"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".ui.activities.MainActivity" />
        <activity android:name=".ui.activities.NowPlayingActivity" />
        <activity
            android:name=".ui.activities.ChatActivity"
            android:theme="@style/AppTheme.TransparentActivity"
            android:windowSoftInputMode="adjustPan" />

        <!-- Player Service -->
        <service
            android:name=".player.PlayerService"
            android:exported="false"
            android:process=":player" />

        <!-- Broadcast Receiver -->
        <receiver
            android:name=".player.PlayerService$PlayReceiver"
            android:exported="false"
            android:process=":player" />

        <receiver
            android:name=".player.PlayerController$UpdateSongReceiver"
            android:exported="false">
            <intent-filter android:priority="9">
                <action android:name="cc.haoduoyu.umaru.player.UPDATE_SONG_INFO" />
            </intent-filter>
        </receiver>


        <!-- begin: baidu speech sdk-->
        <!-- 请填写应用实际的APP_ID -->
        <meta-data
            android:name="com.baidu.speech.APP_ID"
            android:value="7627849" />
        <!-- 请填写应用实际的API_KEY -->
        <meta-data
            android:name="com.baidu.speech.API_KEY"
            android:value="NWLOSSt60qaEkdHk6PtwZX0u" />
        <!-- 请填写应用实际的SECRET_KEY -->
        <meta-data
            android:name="com.baidu.speech.SECRET_KEY"
            android:value="872b452f64bc6e04964d4c9330992d19" />
        <service
            android:name="com.baidu.speech.VoiceRecognitionService"
            android:exported="false" />
        <activity
            android:name="com.baidu.voicerecognition.android.ui.BaiduASRDigitalDialog"
            android:configChanges="orientation|keyboardHidden|screenLayout"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="com.baidu.action.RECOGNIZE_SPEECH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- end : baidu speech sdk-->


        <activity
            android:name="com.thefinestartist.finestwebview.FinestWebViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="sensor"
            android:theme="@style/FinestWebViewTheme.Light" />
    </application>

</manifest>
