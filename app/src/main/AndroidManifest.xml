<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cc.haoduoyu.umaru">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--连接网络权限，用于执行云端语音能力 -->
    <!--<uses-permission android:name="android.permission.INTERNET"/>-->
    <!--获取手机录音机使用权限，听写、识别、语义理解需要用到此权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!--读取网络信息状态 -->
    <!--<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>-->
    <!--获取当前wifi状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--允许程序改变网络连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!--读取手机信息权限 -->
    <!--<uses-permission android:name="android.permission.READ_PHONE_STATE"/>-->
    <!--读取联系人权限，上传联系人需要用到此权限 -->
    <!--<uses-permission android:name="android.permission.READ_CONTACTS"/>-->
    <!--二维码需要用到此权限 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <!--创建文件夹需要用到此权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:name=".Umaru"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".ui.activities.MainActivity" />
        <activity android:name=".ui.activities.NowPlayingActivity" />
        <activity
            android:name=".ui.activities.ChatActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@style/AppTheme.TransparentActivity"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".ui.activities.AboutActivity"
            android:label="@string/about"></activity>
        <activity
            android:name=".ui.activities.SettingActivity"
            android:label="@string/settings"></activity>
        <activity
            android:name=".ui.activities.WebViewActivity"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".utils.zbar.CaptureActivity"
            android:screenOrientation="portrait" />

        <!-- Player Service
        android:exported这个属性用于指示该服务是否能够被其他应用程序组件调用或跟它交互。
        如果设置为true，则能够被调用或交互，否则不能。
        设置为false时，只有同一个应用程序的组件或带有相同用户ID的应用程序才能启动或绑定该服务。-->
        <service
            android:name=".player.PlayerService"
            android:exported="false"
            android:process=":player" />

        <!--FloatView Service-->
        <service
            android:name=".widgets.FloatViewService"
            android:exported="false" />

        <!-- Broadcast Receiver -->
        <receiver
            android:name=".player.PlayerService$PlayReceiver"
            android:exported="false"
            android:process=":player" />

        <receiver
            android:name=".player.PlayerController$UpdateSongReceiver"
            android:exported="false">
            <intent-filter android:priority="9">
                <action android:name="cc.haoduoyu.umaru.player.UPDATE_SONG_INFO" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
